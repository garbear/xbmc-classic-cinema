<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.classiccinema" name="Classic Cinema" version="0.8.1" provider-name="jbel">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
    <import addon="script.module.beautifulsoup" version="3.0.8"/>
    <import addon="script.module.simplejson" version="2.0.10"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary>Classic Cinema Video Addon</summary>
    <description>Watch online video movies found at http://www.classiccinemaonline.com.  The site aggregates old movies and tv shows found on google video and archive.org.</description>
    <disclaimer/>
  </extension>
</addon>
